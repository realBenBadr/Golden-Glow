# Server Configuration
PORT=3000
NODE_ENV=development

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_USERNAME=your_bot_username

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/golden-glow
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin

# Application URLs
APP_URL=https://your-app-domain.com
BOT_WEBHOOK_URL=https://your-app-domain.com/api/telegram/webhook

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
USE_REDIS=false

# SSL Certificate Paths (for HTTPS server)
SSL_CERT_PATH=./certificates/cert.pem
SSL_KEY_PATH=./certificates/key.pem 